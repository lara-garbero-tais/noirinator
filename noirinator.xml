<?xml version="1.0" encoding="UTF-8"?>

<settings>
    <imgMaxSize>1200</imgMaxSize> 
    <smoothThreshold>850</smoothThreshold>
    <steps>8</steps>
    <backgroundSteps>1</backgroundSteps>
    <blackSteps>3</blackSteps>
    <defaultBlackArea>20</defaultBlackArea>
    <inputDir>input</inputDir>
    <processDir>svgs</processDir>
    <xmlNamespace>{http://www.w3.org/2000/svg}</xmlNamespace>
</settings>

<!-- 
References:
imgMaxSize: images larger than this will be sized down. in px.
smoothThreshold: images larger than this will be processed using the "smooth" setting. in px.
steps: number of grays for first trace.
backgroundSteps: number of layers to be discarded as background.
blackSteps: layer to be used as suggested black zone.
defaultBlackArea: desired percent of black if blackStep not present or unusable (to be implemented).
inputDir: directory holding the blender output to be processed
processDir: output directory for the trace function
xmlNamespace: to be dealt with after the trace function output is available for analysis
 -->
